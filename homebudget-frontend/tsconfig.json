{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": true,
        "module": "es6",
        "target": "es6",
        "jsx": "react",
        "sourceMap": true,
        "declaration": true,
        "allowJs": true,
        "moduleResolution": "node",
        "strict": true
    },
    "exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts"],
    "include": ["./src/**/*", "index.d.ts"]
}