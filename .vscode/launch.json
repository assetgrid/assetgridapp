    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch backend",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build backend",
            "program": "${workspaceFolder}/backend/bin/Debug/net7.0/backend.dll",
            "args": [],
            "cwd": "${workspaceFolder}/backend",
            "stopAtEntry": false,
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        }
    ]
}